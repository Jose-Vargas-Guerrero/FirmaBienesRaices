<div class="container">
    <div class="form-container">
      <h2>Contacto</h2>
      <form class="form">
        <label>Nombre</label>
        <input type="text" placeholder="Nombre aqui..." />
        <label>Presupuesto de compra</label>
        <input type="text" placeholder=" HNL / USD" />
        <label>Prima del 10%</label>
        <div class="options">
            <button>Si</button>
            <button>No</button>
        </div>
        <label>Mensaje</label>
        <input type="text" placeholder="Comienze a escribir..." />
      </form>
      <a href="">Enviar mensaje</a>
    </div>
  </div>
  
  <style>
  
      .container{
          height: auto;
          max-width: 100vw;
          margin: 3rem 0;
          padding: 1rem 0;
          display: flex; 
          justify-content: start;
          align-items: center;
      }
  
      .form-container{
          height: 50%;
          width: 50%;
          margin: 0 17%;
          padding: 10px 0;
      }
  
      .form-container >h2{
          font-size: 2.3rem;
          font-weight: lighter;
      }
  
      .form{
          height: 60%;
          margin-bottom: 30px;
  
  
          display: flex;
          flex-direction: column;
          justify-content: start;
          align-items: start;
          
      }
  
      .form > label{
        font-size: 1.1rem;
        font-weight: lighter;
      }
  
      .form > input {
        width: 500px;
        height: 30px;
        margin: 10px 0 40px 0;
        border: none;
        outline: none;
        border-bottom: 2px solid #000000;
        transition: border-bottom ease-in 0.2s;
      }
  
      .form > input:focus {
        border-bottom: 2px solid #003ADB ;
      }

      .options{
        width: 50%;
        margin: 30px 0;
      }

      .options > button{
          border: none;
          background-color: transparent;
          color: #000000;
          border: #003ADB solid 2px;
          margin-right: 10px;
          font-size: 1rem;
          padding: 6px 20px;
          width: auto;
          transition: 0.2s ease-in;
          cursor: pointer;
      }

      .options > button:hover{
        background-color: #003ADB;
        color: #ffffff;
      }
  
      .form-container > a{
          text-decoration: none;
          background-color: #003ADB;
          color: white;
          font-size: 0.9rem;
          padding: 10px 20px;
          width: auto;
          transition: 0.2s ease-in;
          font-family: "Inter", sans-serif;
      }
  
      .form-container > a:hover{
          color: #000000;
          background-color: transparent;
          outline: solid 1px #003ADB;
      }
  
      .info-container{
        height: auto
      }
  
      .info-box{
        margin-left: 10px;
      }
  
      .contact-info{
        display: flex;
        flex-direction: row;
        justify-content: start;
        margin: 20px 0;
      }
  
  </style>