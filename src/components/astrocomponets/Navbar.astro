---
import { Image } from "astro:assets";
import logo from "../../../src/images/logo.png";
import Menu from '../reactComponents/Menu'
---

<div class="navbar">
  <a href="/"><Image class="logo" src={logo} alt="Logo" /></a>
  <ul>
    <li><a>Nosotros</a></li>
    <li class="dropdown">
      <a>Inmuebles</a>
      <div class="dropdown-content">
        <a href="/venta">Venta</a>
        <a href="/renta">Renta</a>
        <a href="/preventa">Preventa</a>
      </div>
    </li>
    <li><a>Contacto</a></li>
    <Menu client:load/>
  </ul>
</div>

<style>
  .navbar {
    z-index: 4;
    background-color: #03071e;
    color: #ffffff;
    font-family: "Inter", sans-serif;
    height: 80px;
    padding: 0 53px;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;

    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
  }

  .logo {
    height: 50px;
    width: 46px;
  }

  .navbar a {
    font-size: 1.2rem;
    margin: 0 20px;
    cursor: pointer;
  }

  ul {
    list-style-type: none;
    position: relative;
    display: flex;
    flex-direction: row;
  }

  .dropdown-content {
    display: none;
    position: absolute;
    min-width: 10%;
    background-color: #ffffff;
    color: #000000;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    z-index: 1;
  }

  .dropdown-content a {
    color: black;
    padding: 5px 10px;
    text-decoration: none;
    display: block;
    text-align: left;
  }


  .dropdown:hover .dropdown-content{
    display: block;
  }

  @media only screen and (max-width: 600px) {
    .navbar a {
        display: none;
  }
}


</style>
