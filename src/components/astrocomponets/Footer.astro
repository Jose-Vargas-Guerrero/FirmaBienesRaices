---
import { Image } from "astro:assets";
import logo from "../../images/logo.png";
import { FaFacebook } from "react-icons/fa";
import { FaTwitter } from "react-icons/fa";
import { FaInstagram } from "react-icons/fa";
---

<div class="footer">
  <Image class="logo" src={logo} alt="logo" />
  <div class="linksContainer">
    <a href="/renta">Venta</a>
    <a href="/venta">Renta</a>
    <a href="/preventa">Preventa</a>
  </div>
  <div>
    <a href="https://www.facebook.com/Firmabienesraices/" target="_blank"><FaFacebook className="icon" /></a>
    <a href="https://www.facebook.com/Firmabienesraices/" target="_blank"><FaTwitter className="icon" /></a>
    <a href="https://www.facebook.com/Firmabienesraices/" target="_blank"><FaInstagram className="icon" /></a> 
  </div>
  <div class="copyright">
    <p>Copyright Â© 2024. Company Digital. All rights reserved.</p>
  </div>
</div>

<style>
  .footer {
    background-color: #03071e;
    color: #ffffff;
    height: auto;

    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .logo {
    margin-top: 60px;
    height: 50px;
    width: 50px;
  }

  .linksContainer {
    width: 80%;
    margin: 30px 0;

    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
  }

  .linksContainer > a {
    color: #ffffff;
    text-decoration: none;
    margin: 10px 44px;
    font-weight: bold;
  }

  .icon {
    font-size: 1.3rem;
    margin: 0 16px;
  }

  .copyright {
    font-size: 1rem;
    margin: 30px 0;
  }

  /* media querys */
  @media (max-width: 480px) {

    .footer {
      max-width: 100vw;
      height: auto;
  }
    
    .logo {
      margin: 30px 0;
      height: 50px;
      width: 50px;
    }

    .linksContainer {
      display: none;
    }

    .icon {
      font-size: 1.3rem;
      margin: 0 16px;
    }

    .copyright {
      font-size: 1rem;
      margin: 30px 0px;
      padding: 0 1rem;
      text-align: center
    }
  }
</style>
