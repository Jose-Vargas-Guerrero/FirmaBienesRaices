---
import { MdOutlinePhone } from "react-icons/md";
import { BiMessageSquareDots } from "react-icons/bi";
import { SiGooglemaps } from "react-icons/si";
---

<div class="container">
  <div class="form-container">
    <h2>Contacto</h2>
    <form class="form">
      <label>Nombre</label>
      <input type="text" placeholder="Nombre aqui..." />
      <label>Mensaje</label>
      <input type="text" placeholder="Comienze a escribir..." />
    </form>
    <a href="#">Enviar mensaje</a>
  </div>
  <div class="info-container">
    <div class="contact-info">
      <MdOutlinePhone />
      <div class="info-box">
        <strong>Telefono</strong>
        <p>+1 252-937-3762</p>
        <p>+1 252-937-3762</p>
      </div>
    </div>
    <div class="contact-info">
      <BiMessageSquareDots />
      <div class="info-box">
        <strong>E-mail</strong>
        <p>sample@example.com</p>
      </div>
    </div>
    <div class="contact-info">
      <SiGooglemaps />
      <div class="info-box">
        <strong>Direccion</strong>
        <p>5 Indian Spring Dr. Mundelein, IL 60060</p>
      </div>
    </div>
  </div>
</div>

<style>

    .container{
        height: 100vh;
        max-width: 100vw;

        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
    }

    .form-container{
        height: 50%;
        width: 50%;
    }

    .form-container >h2{
        font-size: 2.3rem;
        font-weight: lighter;
    }

    .form{
        height: 60%;
        margin-bottom: 30px;


        display: flex;
        flex-direction: column;
        justify-content: start;
        align-items: start;
        
    }

    .form > label{
      font-size: 0.9rem;
      font-family: "Inter", sans-serif;
    }

    .form > input {
      font-family: "Inter", sans-serif;
      width: 500px;
      height: 100px;
      margin: 10px 0;
      border: none;
      outline: none;
      border-bottom: 2px solid #000000;
      transition: border-bottom ease-in 0.2s;
    }

    .form > input:focus {
      border-bottom: 2px solid #003ADB ;
    }

    .form-container > a{
        text-decoration: none;
        background-color: #003ADB;
        color: white;
        font-size: 1rem;
        padding: 10px 20px;
        width: auto;
        transition: 0.2s ease-in;
    }

    .form-container > a:hover{
        color: #000000;
        background-color: transparent;
        outline: solid 1px #003ADB;
    }

    .info-container{
      height: auto
    }

    .info-box{
      margin-left: 10px;
    }

    .contact-info{
      font-family: "Inter", sans-serif;
      display: flex;
      flex-direction: row;
      justify-content: start;
      margin: 20px 0;
    }

</style>
