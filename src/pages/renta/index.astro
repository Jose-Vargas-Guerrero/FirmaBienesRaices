---
    import Layout from '../../layouts/Layout.astro'
    import renta from '../../data/renta'
    import BannerRenta from '../../components/astrocomponets/listaInmuebles/BannerRenta.astro'
    import PreviewRenta from '../../components/reactComponents/PreviewRenta'
---


<Layout title='renta'>
        <BannerRenta categoria="Renta"/>
        <PreviewRenta inmuebles={renta} client:load/>
</Layout>



<style>
      main {
    max-width: 100vw;
    overflow: hidden;
    height: auto;
  }

  .body {
    max-width: 100vw;
    height: auto;
    display: grid;
    justify-items: center;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
    padding: 20px;
  }

  /* media querys */
  @media (max-width: 480px) {
    .body {
      max-width: 100vw;
      height: auto;
      display: grid;
      justify-items: center;
      grid-template-columns: 1fr;
      gap: 20px;
      padding: 20px;
    }
  }

  /* Para dispositivos medianos (tabletas) */
@media (max-width: 768px) {
  .body {
      max-width: 100vw;
      height: auto;
      display: grid;
      justify-items: center;
      grid-template-columns: 1fr;
      gap: 20px;
      padding: 20px;
    }
}
</style>


