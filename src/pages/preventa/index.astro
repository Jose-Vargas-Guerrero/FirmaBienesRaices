---
import Layout from "../../layouts/Layout.astro";
import preventa from "../../data/preventa";
import BannerPreVenta from "../../components/astrocomponets/listaInmuebles/BannerPreVenta.astro";
import Preview from "../../components/astrocomponets/listaInmuebles/Preview.astro";
---

<Layout title="pre-venta">
  <main>
    <BannerPreVenta categoria="Preventa" />
    <div class="body">
      {
        preventa.map((e) => (
        <Preview
        categoria="preventa"
        enlace={e.url}
        codigo={e.codigo}
        nombre={e.nombre}
        medidas={e.medidas}
        caracteristica1={e.caracteristica1}
        caracteristica2={e.caracteristica2}
        precio={e.precio}
        disponible={e.disponible}
        imagen={e.imagen}
      />
        ))
      }
    </div>
  </main>
</Layout>

<style>
  main {
    max-width: 100vw;
    overflow: hidden;
    height: auto;
  }

  .body {
    max-width: 100vw;
    height: auto;
    display: grid;
    justify-items: center;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
    padding: 20px;
  }

  /* media querys */
  @media (max-width: 480px) {
    .body {
      max-width: 100vw;
      height: auto;
      display: grid;
      justify-items: center;
      grid-template-columns: 1fr;
      gap: 20px;
      padding: 20px;
    }
  }

  /* Para dispositivos medianos (tabletas) */
@media (max-width: 768px) {
  .body {
      max-width: 100vw;
      height: auto;
      display: grid;
      justify-items: center;
      grid-template-columns: 1fr;
      gap: 20px;
      padding: 20px;
    }
}
</style>
