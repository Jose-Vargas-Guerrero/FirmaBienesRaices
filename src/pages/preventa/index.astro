---
import Layout from "../../layouts/Layout.astro";
import preventa from "../../data/preventa";
import BannerPreVenta from "../../components/astrocomponets/listaInmuebles/BannerPreVenta.astro";
import PreviewPreventa from "../../components/reactComponents/PreviewPreventa";
---

<Layout title="pre-venta">
    <BannerPreVenta categoria="Preventa" />
    <PreviewPreventa inmuebles={preventa} client:load/>
</Layout>

<style>
  main {
    max-width: 100vw;
    overflow: hidden;
    height: auto;
  }

  .body {
    max-width: 100vw;
    height: auto;
    display: grid;
    justify-items: center;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
    padding: 20px;
  }

  /* media querys */
  @media (max-width: 480px) {
    .body {
      max-width: 100vw;
      height: auto;
      display: grid;
      justify-items: center;
      grid-template-columns: 1fr;
      gap: 20px;
      padding: 20px;
    }
  }

  /* Para dispositivos medianos (tabletas) */
@media (max-width: 768px) {
  .body {
      max-width: 100vw;
      height: auto;
      display: grid;
      justify-items: center;
      grid-template-columns: 1fr;
      gap: 20px;
      padding: 20px;
    }
}
</style>
